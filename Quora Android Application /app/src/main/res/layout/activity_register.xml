<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="730dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".RegisterActivity">


    <ImageView
        android:layout_weight="0.05"
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="73dp"
        app:srcCompat="@drawable/quora_name"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="35dp" />

    <EditText
        android:layout_weight="0.05"
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="First Name"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="157dp" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="Last Name"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="222dp" />

    <EditText
        android:layout_weight="0.05"
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="Email"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="292dp" />

    <EditText
        android:layout_weight="0.05"
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="Password"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="367dp" />

    <EditText
        android:layout_weight="0.05"
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="User Name"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="430dp" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="Phone Number"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="486dp" />
    <EditText
        android:id="@+id/et_date_of_birth"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="Date Of Birth"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="486dp" />
    <EditText
        android:id="@+id/et_platform_id"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="8dp"
        android:hint="Platform Id"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="486dp" />
    <EditText
        android:id="@+id/et_public_or_private"
        android:layout_weight="0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="public or private"
        android:layout_marginHorizontal="8dp"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="486dp" />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Categories You Like"
        android:textColor="@color/black"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Fashion"></TextView>
    <CheckBox
        android:id="@+id/fashion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"></TextView>
        <CheckBox
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entertainment"></TextView>
        <CheckBox
            android:id="@+id/entertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Sports"></TextView>
        <CheckBox
            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel"></TextView>
        <CheckBox
            android:id="@+id/travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"></TextView>
        <CheckBox
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/sign_up"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:backgroundTint="#AA2200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView

            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"></TextView>
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4169e1"
        android:text="Login Here"></TextView>

</LinearLayout>

</LinearLayout>
</ScrollView>