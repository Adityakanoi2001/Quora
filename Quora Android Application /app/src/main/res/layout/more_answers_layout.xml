<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_readmore_profileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile_image"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_moreanswer_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:textSize="16dp"
                        android:text="Name"></TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/moreanswer_answerbody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:text="It is simply, so overwhelmingly beautiful. It is beautiful to look at from a distance. It is wonderous from up close. To think that its walls were studded with actual jewels(that were ransacked by the soldiers of the English East India Company) at one time makes one imagine: if it is so beautiful even today, surely it would have been even more so before the ransacking took place. On a full moon night the Taj takes on a magical hue that few humans can resist admiring

"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_readmore_upvote"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/up"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>

            <ImageView
                android:id="@+id/iv_readmore_downvote"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/down"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>

            <ImageView
                android:id="@+id/iv_comment_read_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/comment_icon"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/share"
                android:minWidth="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/heart"
                android:minWidth="8dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/laugh"
                android:minWidth="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/surprise"
                android:minWidth="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/thumbs_up"
                android:minWidth="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/cry"
                android:minWidth="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:textSize="16dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginBottom="12dp"-->
<!--                android:text="10"></TextView>-->

<!--            <TextView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:textSize="16dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginBottom="12dp"-->
<!--                android:text="10"></TextView>-->


            <TextView
                android:id="@+id/tv_read_more_vote"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:text="0"></TextView>


<!--            <ImageView-->
<!--                android:id="@+id/answer_in_home"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_marginStart="220dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginBottom="12dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/baseline_edit_note_24"></ImageView>-->

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>